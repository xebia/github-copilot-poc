{
  "name": "WrightBrothersAPI (.NET 9)",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",
  "workspaceFolder": "/workspaces/github-copilot-poc/01 inspiration",
  "features": {
    "ghcr.io/devcontainers/features/dotnet:2": {
      "version": "9.0",
      "sdk": true
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    },
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "forwardPorts": [1903],
  "portsAttributes": {
    "1903": {
      "label": "WrightBrothersAPI",
      "onAutoForward": "openBrowser"
    }
  },
  "postCreateCommand": "dotnet restore ./code/WrightBrothersAPI.sln",
  "customizations": {
    "vscode": {
      "settings": {
        "dotnet.defaultSolution": "code/WrightBrothersAPI.sln"
      },
      "extensions": [
        "ms-dotnettools.csharp",
        "ms-dotnettools.csdevkit",
        "github.copilot",
        "github.copilot-chat",
        "ms-azuretools.vscode-docker",
        "eamodio.gitlens",
        "ms-vscode.vscode-node-azure-pack"
      ]
    }
  }
}
